<view class="container">
  <image src="/image/my@bg.png" class="bg"></image>
  <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 微信身份绑定 </button>
  <img-btn-cmp wx:if="{{!hasUserInfo}}" open-type="getUserInfo" class="avatar-position" >
     <image slot="img" class="avatar" src="/image/my.png" /> 
  </img-btn-cmp>
  <view class="avatar-container avatar-position">
    <image src="{{userInfo.avatarUrl}}" wx:if="{{hasUserInfo}}" class="avatar" />
    <open-data wx:if="{{hasUserInfo}}" type="userNickName"></open-data>
  </view>
</view>

<view class="page">
    <view class="page__bd">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell" bindtap="toList">
                <view class="weui-cell__hd">
                    <image src="/image/icon1.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd">我的设备</view>
                <view class="weui-cell__ft"></view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__hd">
                    <image src="/image/icon2.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd">激活设备</view>
                <view class="weui-cell__ft"></view>
            </view>

             <view class="weui-cell" bindtap="toLogin">
                <view class="weui-cell__hd">
                    <image src="/image/icon3.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd">绑定账户</view>
                <view class="weui-cell__ft"></view>
            </view>
        </view>
    </view>
</view>